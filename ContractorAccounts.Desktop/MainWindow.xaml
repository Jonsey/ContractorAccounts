<Window x:Class="ContractorAccounts.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Contractor Accounts" Height="600" Width="800">
    <Grid>
        <DockPanel>
            <ToolBar DockPanel.Dock="Top" Height="40" VerticalAlignment="Top" HorizontalAlignment="Left" >
                <ToolBarPanel Margin="2" >
                    <StackPanel Orientation="Horizontal">
                        <Button Content="Companies" Height="30" />

                        <Button Content="Invoices" Height="30" />

                        <Button Content="Expenses" Height="30" />

                        <Button Content="Reports" Height="30" />
                    </StackPanel>
                </ToolBarPanel>
            </ToolBar>
        </DockPanel>
    </Grid>
</Window>
